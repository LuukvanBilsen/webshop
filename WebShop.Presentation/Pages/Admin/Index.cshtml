@page
@model WebShop.Presentation.IndexModel

<br />

<div id="app" class="container">
    <div>
        <div v-if="!editing">
            <table class="table">
                <tr>
                    <td>Id</td>
                    <td>Name</td>
                    <td>Description</td>
                    <td>Price (in cents)</td>
                </tr>
                <tr v-for="(product, index) in products">
                    <td>{{product.id}}</td>
                    <td>{{product.name}}</td>
                    <td>{{product.description}}</td>
                    <td>{{product.price}}</td>
                    <td><a @@click="editProduct(product.id, index)">Edit</a></td>
                    <td><a @@click="deleteProduct(product.id, index)">remove</a></td>
                </tr>
            </table>
            <button class="button" @@click="newProduct">Add new product</button>
        </div>
        <div v-else>
            <div class="field">
                <label class="field-label">Name:</label>
                <div class="control">
                    <input v-model="productModel.name" />
                </div>
            </div>
            <div class="field">
                <label class="field-label">Description:</label>
                <div class="control">
                    <input v-model="productModel.description" />
                </div>
            </div>
            <div class="field">
                <label class="field-label">Price (in cents):</label>
                <div class="control">
                    <input v-model="productModel.price" />
                </div>
            </div>
            <button class="button is-success" @@click="createProduct" v-if="!productModel.id">create product</button>
            <button class="button is-warning" @@click="updateProduct" v-else>update product</button>
            <button class="button" @@click="cancel" v-if="productModel.id">cancel</button>

        </div>
    </div>
</div>


@section scripts{
    <script src="~/js/Admin/products.js"></script>
}  